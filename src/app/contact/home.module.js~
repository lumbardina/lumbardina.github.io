'use strict';
/* jshint esnext: true */

import modelModule from '../../components/model/model.module';
import commonModule from '../../components/common/common.module';

import HomeController from './home.controller';
import appComponents  from './app-components.service';
import filterByComponent from './filter-by-component';

var homeModule = angular.module('maxeler.home',
				['ngRoute',
				 modelModule.name,
				 commonModule.name,])
	.controller('homeController', HomeController)
	.config(($routeProvider) => {
	    'ngInject';

	    $routeProvider
		.when('/', {
		    templateUrl: 'app/home/home.template.html',
		    controller: 'homeController',
		    controllerAs: 'homeController',
		    bindToController: true
		});
	})
	.factory('appComponents', appComponents)
	.filter('filterByComponent', filterByComponent);	    

export default homeModule;
